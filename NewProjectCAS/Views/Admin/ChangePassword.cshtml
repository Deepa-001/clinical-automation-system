@model NewProjectCAS.Models.ChangePasswordModel
@{ ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Admin/LayoutPage1.cshtml"; }

<div class="form-row" style="margin-left:-15px">
    <div class="col-sm-3">


        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:835px;background-color:darkgrey">
            <h1 class="text-center">Menu</h1>
            <br><br>
            <div class="container text-left col-sm-3" style="font-size:20px">
                <ul>
                    <li>@Html.ActionLink("Dashboard", "GetDashboard", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Edit_Profile", "GetAdminData", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Change_Password", "ChangePassword", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Add_And_Edit_Drug_Details", "AddDrugDetails", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("View_And_Delete_Drugs", "ViewDrugsDetails", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("View_Order_Detail", "ViewOrderDetail", "Admin")</li>
                </ul>
            </div>
        </div>



    </div>
    <div class="col-sm-9">
        <div class="container">
            <div class="container text-center">
                <h2><b>Let's Change Your Old Password</b></h2>
            </div>
            <br><br><br><br />

            @using (Html.BeginForm("ValidatePassword", "Admin", FormMethod.Post))
            {
<div class="form-row">
    <div class="col-sm-2">
        <label>Old Password</label>
    </div>
    <div class="col-sm-3">
        @Html.PasswordFor(a => a.OldPassword, new { @class = "form-control", @maxlength = "30" })
    </div>
</div>
                <br><br><br><br>

                                <div class="form-row">
                                    <div class="col-sm-2">
                                        <label>New Password</label>
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.PasswordFor(a => a.NewPassword, new { @class = "form-control", @maxlength = "30" })
                                        @Html.ValidationMessageFor(a => a.NewPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                                <br><br><br><br>

                                                                <div class="form-row">
                                                                    <div class="col-sm-2">
                                                                        <label>Confirm New Password</label>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        @Html.PasswordFor(a => a.ConfirmNewPassword, new { @class = "form-control", @maxlength = "30" })
                                                                        @Html.ValidationMessageFor(a => a.ConfirmNewPassword, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                                                <br><br><br><br>

                                                                                                <div class="form-row">
                                                                                                    <input type="submit" class="btn btn-primary" value="Save">
                                                                                                </div>

                                                                                                                <div class="text-success form-group">
                                                                                                                    @ViewBag.Message
                                                                                                                </div>}
        </div>
    </div>
</div>


