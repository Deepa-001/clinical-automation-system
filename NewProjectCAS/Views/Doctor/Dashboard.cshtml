@model NewProjectCAS.Models.DoctorDashboardModel
@{ ViewBag.Title = "Dashboard"; }

<div class="form-row" style="margin-left:-15px">
    <div class="col-sm-3">


        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:835px;background-color:darkgrey">
            <h1 class="text-center">Menu</h1>
            <br><br>
            <div class="container text-left col-sm-3" style="font-size:20px">
                @using (MyDatabseEntities db = new MyDatabseEntities())
                {
                    int mid = Convert.ToInt32(Session["MemberId"]);
                    var getdata = db.Doctors.FirstOrDefault(a => a.MemberId == mid);

                    if (getdata == null)
                    {
    <ul>
        <li>@Html.ActionLink("Dashboard", "GetDashboard", "Doctor")<br><br /></li>
        <li>@Html.ActionLink("Edit_Profile", "GetDoctorData", "Doctor")</li>
    </ul> }
                    else
                    {
    <ul>
        <li>@Html.ActionLink("Dashboard", "GetDashboard", "Doctor")<br><br /></li>
        <li>@Html.ActionLink("Edit_Profile", "GetDoctorData", "Doctor")<br><br /></li>
        <li>@Html.ActionLink("Change_Password", "ChangePassword", "Doctor")<br><br /></li>
        <li>@Html.ActionLink("View_Appointment_Detail", "ViewAppointmentDetails", "Doctor")<br><br /></li>
        <li>@Html.ActionLink("View_Message", "ViewPatientMessage", "Doctor")</li>
    </ul>                }
                }

            </div>
        </div>





    </div>
    <div class="col-sm-9">
        <div>
            <div class="container text-center">
                <h2><b>Welcome to Doctors Dashboard</b></h2>
            </div>
            <br><br><br><br />

            <div class="form-row">
                <div class="col-sm-2"></div>
                <div class="col-sm-3">
                    <div id="ddp1" class="img-circle text-center" style="width:300px;height:300px;padding-top:110px;background-color:lightcoral">
                        <h3>Total Appointments <b> @Model.TotalAppointment</b></h3>
                    </div>
                </div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <div id="ddp2" class="img-circle text-center" style="width:300px;height:300px;padding-top:60px;background-color:lightseagreen">
                        <h3>Requested <b> @Model.Requested</b></h3>
                        <h3>Approved <b> @Model.Approved</b></h3>
                        <h3>Rejected <b> @Model.Rejected</b></h3>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
            <br /><br />
            <div class="form-row">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div id="ddp3" class="img-circle text-center" style="width:300px;height:300px;padding-top:110px;background-color:yellowgreen">
                        <h3>Total Messages  <b>@Model.TotalMessage</b> </h3>
                    </div>
                </div>
                <div class="col-sm-3"></div>
                <div class="col-sm-3">
                    <div id="ddp4" class="img-circle text-center" style="width:300px;height:300px;padding-top:60px;background-color:mediumpurple">
                        <h3>Read Messages <b> @Model.Read</b></h3>
                        <h3>Unread Messages <b> @Model.Unread</b></h3>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</div>



