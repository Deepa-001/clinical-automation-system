@model NewProjectCAS.Models.DoctorAppointmentModel
@{ ViewBag.Title = "DoctorAppointment"; }

<div class="form-row" style="margin-left:-15px">
    <div class="col-sm-3">

        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:835px;background-color:darkgrey">
            <h1 class="text-center">Menu</h1>
            <br><br>
            <div class="container text-left col-sm-3" style="font-size:20px">
                @using (MyDatabseEntities db = new MyDatabseEntities())
                {
                    int mid = Convert.ToInt32(Session["MemberId"]);
                    var getdata = db.Patients.FirstOrDefault(a => a.MemberId == mid);

                    if (getdata == null)
                    {
    <ul>
        <li>@Html.ActionLink("Dashboard", "GetDashboard", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Edit_Profile", "GetPatientData", "Patient")</li>
    </ul> }
                    else
                    {
    <ul>
        <li>@Html.ActionLink("Dashboard", "GetDashboard", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Edit_Profile", "GetPatientData", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Change_Password", "ChangePassword", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Doctor_Appointment", "DoctorAppointment", "Patient")<br><br /></li>
        <li>@Html.ActionLink("View_Appointment_Detail", "ViewAppointmentDetails", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Send_Message_To_Doctor", "SendMessageToDoctor", "Patient")<br><br /></li>
        <li>@Html.ActionLink("View_Message", "ViewDoctorMessage", "Patient")<br><br /></li>
        <li>@Html.ActionLink("Raise_Drug_Order", "RaiseDrugOrder", "Patient")<br><br /></li>
        <li>@Html.ActionLink("View_Order_Details", "ViewOrderDetails", "Patient")</li>
    </ul>                }
                }

            </div>
        </div>



    </div>
    <div class="col-sm-9">
        <div>
            <div class="container text-center">
                <h2><b>Let's Book Your Personal Appointment</b></h2>
            </div>
            <br><br><br><br />

            @using (Html.BeginForm("PostAppointment", "Patient", FormMethod.Post))
            {
<div class="form-row">
    <div class="col-sm-2">
        <label>Appointment Date</label>
    </div>
    <div class="col-sm-3">
        <input type="date" @Html.EditorFor(a => a.AppointmentDate, new { htmlattributes = new { @class = "form-control", @maxlength = "30" } })
               @*@Html.TextBoxFor(a => a.AppointmentDate, new { @class = "form-control", @maxlength = "30" })*@
    </div>

    <div class="col-sm-2">
        <label>Doctor</label>
    </div>
    <div class="col-sm-3">
        @Html.DropDownListFor(a => a.DoctorId, Model.lstDoctor, "Select", new { @class = "form-control" })
    </div>
</div>
                <br><br><br><br>

                                <div class="form-row">
                                    <div class="col-sm-2">
                                        <label>Subject</label>
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.TextBoxFor(a => a.Subject, new { @class = "form-control", @maxlength = "50" })
                                    </div>
                                </div>
                                                <br><br><br><br>

                                                                <div class="form-row">
                                                                    <div class="col-sm-2">
                                                                        <label>Description</label>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @maxlength = "100" })
                                                                    </div>
                                                                </div>
                                                                                <br><br><br><br>

                                                                                                <div class="form-row">
                                                                                                    <div class="col-sm-3">
                                                                                                        <input type="submit" class="btn btn-primary" value="Submit">
                                                                                                    </div>

                                                                                                    <div class="col-sm-3">
                                                                                                        <input type="reset" class="btn btn-danger" value="Clear">
                                                                                                    </div>
                                                                                                </div>
                                                                                                                <br />
                                                                                                                                <div class="text-success text-center form-group">
                                                                                                                                    @ViewBag.Message
                                                                                                                                </div>            }
        </div>
    </div>
</div>




