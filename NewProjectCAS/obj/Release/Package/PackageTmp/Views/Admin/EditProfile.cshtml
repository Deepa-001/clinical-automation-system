@model NewProjectCAS.Models.AdminViewModel
@{ ViewBag.Title = "EditProfile";
    Layout = "~/Views/Admin/LayoutPage1.cshtml"; }

<div class="form-row" style="margin-left:-15px">
    <div class="col-sm-3">



        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:835px;background-color:darkgrey">
            <h1 class="text-center">Menu</h1>
            <br><br>
            <div class="container text-left col-sm-3" style="font-size:20px">
                <ul>
                    <li>@Html.ActionLink("Dashboard", "GetDashboard", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Edit_Profile", "GetAdminData", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Change_Password", "ChangePassword", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("Add_And_Edit_Drug_Details", "AddDrugDetails", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("View_And_Delete_Drugs", "ViewDrugsDetails", "Admin")<br><br /></li>
                    <li>@Html.ActionLink("View_Order_Detail", "ViewOrderDetail", "Admin")</li>
                </ul>
            </div>
        </div>






    </div>
    <div class="col-sm-9">
        <div class="container">
            <div class="container text-center">
                <h2><b>Edit Your Profile Here</b></h2>
            </div>
            <br><br><br><br />

            @using (Html.BeginForm("PostAdminData", "Admin", FormMethod.Post))
            {
<div class="form-row">
    <div class="col-sm-2">
        <label>First Name</label>
    </div>
    <div class="col-sm-3">
        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", @maxlength = "30" })
    </div>

    <div class="col-sm-1">

    </div>
    <div class="col-sm-2">
        <label>Last Name</label>
    </div>
    <div class="col-sm-3">
        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", @maxlength = "30" })
    </div>
</div>
                <br><br><br><br>


                                <div class="form-row">
                                    <div class="col-sm-2">
                                        <label>Gender</label>
                                    </div>
                                    <div class="col-sm-3">
                                        Male:   @Html.RadioButtonFor(a => a.Gender, "Male")
                                        Female: @Html.RadioButtonFor(a => a.Gender, "Female")
                                    </div>

                                    <div class="col-sm-1"></div>

                                    <div class="col-sm-2">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.TextBoxFor(a => a.Address, new { @class = "form-control", @maxlength = "50" })
                                    </div>
                                </div>
                                                <br><br><br><br>

                                                                <div class="form-row">
                                                                    <input type="submit" class="btn btn-primary" value="Save">
                                                                    <input type="reset" class="btn btn-danger" value="Reset">
                                                                </div>

                                                                                <div class="text-success form-group">
                                                                                    @ViewBag.Message
                                                                                </div>}

        </div>
    </div>
</div>


