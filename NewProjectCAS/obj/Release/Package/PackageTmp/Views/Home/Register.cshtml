@model NewProjectCAS.Models.LoginViewModel
@{ ViewBag.Title = "Register"; }

<div class="form-row" style="margin-top:15px">
    <div class="col-sm-8">
        <div class="col-lg-12">
            <div class="table table-bordered" style="height:800px;border-color:coral;border-width:20px">
                <img src="~/Reg1.jpg" height="100%" width="100%" />
            </div>
        </div>
    </div>

    <div class="col-sm-4">

        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:415px;background-color:whitesmoke;border:solid">
            <h2 class="text-center"><b>Register Here</b></h2>
            <div class="col-sm-12">
                @using (Html.BeginForm("PostMember", "Home", FormMethod.Post))
                {
    <div class="form-row">
        <div class="col-sm-1"></div>
        <div class="col-sm-4">
            <label>Email ID</label>
        </div>
        <div class="col-sm-5">
            @Html.TextBoxFor(a => a.EmailId, new { @class = "form-control", @maxlength = "30" })
            @Html.ValidationMessageFor(a => a.EmailId, "", new { @class = "text-danger" })
        </div>
    </div>
                    <br /><br /><br />
                   <div class="form-row">
                     <div class="col-sm-1"></div>
                      <div class="col-sm-4">
                          <label>Password</label>
                      </div>
                    <div class="col-sm-5">
                           @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                           @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                     </div>
                   </div>
                  <br /><br /><br />

                   <div class="form-row">
                       <div class="col-sm-1"></div>
                           <div class="col-sm-4">
                             <label>Role Name</label>
                    </div>
                    <div class="col-sm-5">
                          @Html.DropDownListFor(a => a.RoleId, Model.RoleName, "Select", new { @class = "form-control", @id = "ddlRole" })
                     </div>
                   </div>
                   <br /><br /><br />

                   <div class="form-row">
                                <div class="col-sm-1"></div>
                               <div class="col-sm-2">
                                       <input type="submit" class="btn btn-primary" value="Register">
                                 </div>
                    </div>

                  <div class="text-success form-row">
                      @ViewBag.Message
                    </div>}
            </div>
            <br><br>
        </div>

        <div class="w3-sidebar w3-light-grey w3-bar-block" style="height:400px;background-color:lightcyan;border:solid">
            
            <div class="col-sm-12">
                <h3>
                    This Project is Created By-
                </h3><br />
                <h4>
                    <ol>
                        <li><b> Hrutikesh Jain</b></li>
                        <li><b> SanjayKumar CG </b></li>
                        <li><b> Deepa Biradar</b></li>
                        <li><b> Rishi Kiran</b></li>
                        <li><b> Dipendra </b></li>
                    </ol>
                </h4>
            </div>
            <br><br>
        </div>
    </div>
</div>